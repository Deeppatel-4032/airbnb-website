<%- include("./partials/head") %>
  </head>

  <body class="bg-gray-100 text-gray-900">
    <%- include("partials/nav") %>

      <main class="container mx-auto px-4 py-10">
        <h2 class="text-3xl font-bold text-red-500 text-center mb-10">
          Here are our registered homes:
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% homes.forEach(home=> { %>
            <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
              <img class="h-48 w-full object-cover"
                src="https://imgs.search.brave.com/JlhnQ0bqUrCmWaqgn3ErjJS6yCJ5lh_vHpxeq3VPUEQ/rs:fit:860:0:0:0/g:"
                alt="<%= home.name %>" />
              <div class="p-4">
                <h3 class="text-lg font-semibold mb-1 truncate">
                  <%= home.name %>
                </h3>
                <p class="text-sm text-gray-600 mb-1">
                  <i class="fas fa-map-marker-alt mr-1"></i>
                  <%= home.location %>
                </p>
                <p class="text-red-500 font-bold mb-2">â‚¹ <%= home.price %> / Night
                </p>

                <span class="text-gray-600">
                  <i class="fas fa-star  text-yellow-500"></i>
                  <%= home.rating %> Rating
                </span>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>